{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types": [
      // add node as an option
      "node"
    ],
    // typeRoots option has been previously configured
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "outDir": "types",
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "src/**/*",
    "typings/**/*" // <-- don't forget this line!
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}